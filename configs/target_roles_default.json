{
  "description": "Default role mappings for decision-maker targeting",

  "role_priority": {
    "vp": {
      "priority": 1,
      "titles": [
        "VP Sales",
        "VP Business Development",
        "VP Growth",
        "VP Marketing",
        "VP Revenue",
        "VP Partnerships",
        "Vice President Sales",
        "Vice President Marketing",
        "Vice President Business Development",
        "Vice President Growth"
      ]
    },
    "c_suite": {
      "priority": 2,
      "titles": [
        "CEO",
        "Founder",
        "Co-Founder",
        "President",
        "Owner"
      ]
    },
    "revenue_leaders": {
      "priority": 3,
      "titles": [
        "CMO",
        "CRO",
        "Chief Marketing Officer",
        "Chief Revenue Officer",
        "Chief Growth Officer",
        "Chief Commercial Officer"
      ]
    },
    "director": {
      "priority": 4,
      "titles": [
        "Director of Sales",
        "Director of Marketing",
        "Director of Growth",
        "Director of Business Development",
        "Director of Partnerships",
        "Head of Sales",
        "Head of Marketing",
        "Head of Growth",
        "Head of Business Development"
      ]

  "skip_roles": {
    "titles": [
      "CFO",
      "COO",
      "Chief Financial Officer",
      "Chief Operating Officer",
      "CTO",
      "Chief Technology Officer",
      "VP Engineering",
      "VP Finance",
      "VP Operations"
    ],
    "reason": "Not typically involved in buying decisions for sales/marketing services"
  },

  "exclude_titles": [
    "Assistant",
    "Coordinator",
    "Intern",
    "Student",
    "Junior",
    "Associate",
    "Analyst",
    "Specialist",
    "Support"
  ],

  "niche_overrides": {
    "agencies": {
      "additional_titles": ["Partner", "Managing Director", "Principal", "Managing Partner"],
      "note": "Agencies often use Partner instead of VP/Director"
    },
    "finance": {
      "additional_titles": ["Managing Director", "Partner", "Principal", "Portfolio Manager"],
      "note": "Finance uses MD/Partner titles"
    },
    "consulting": {
      "additional_titles": ["Partner", "Principal", "Managing Consultant", "Practice Lead"],
      "note": "Consulting firms use Partner/Principal"
    },
    "legal": {
      "additional_titles": ["Partner", "Managing Partner", "Of Counsel", "General Counsel"],
      "note": "Law firms use Partner structure"
    }
  },

  "company_size_adjustments": {
    "small": {
      "max_employees": 20,
      "contacts_target": 2,
      "accept_manager": true,
      "note": "In small companies, Manager can be decision-maker"
    },
    "medium": {
      "max_employees": 100,
      "contacts_target": 3,
      "accept_manager": false,
      "note": "Standard targeting"
    },
    "large": {
      "min_employees": 100,
      "contacts_target": 4,
      "accept_manager": false,
      "require_vp_plus": true,
      "note": "Large companies need VP+ for buying authority"
    }
  },


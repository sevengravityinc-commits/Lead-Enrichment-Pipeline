{
  "campaign_id": "general-campaign",
  "campaign_name": "General Campaign",
  "description": "Process any leads without industry filtering - let AI score them",

  "classifiers": {
    "company_filter": {
      "enabled": false,
      "exclude_types": [],
      "exclude_keywords": [],
      "competitor_domains": []
    },
    "icp_scorer": {
      "enabled": true,
      "min_score_threshold": 0,
      "criteria": {
        "employee_range": {
          "min": 1,
          "max": 10000,
          "weight": 25
        },
        "industries": {
          "included": [],
          "excluded": [],
          "weight": 0
        },
        "geo": {
          "countries": [],
          "weight": 0
        },
        "revenue_range": {
          "min": "0",
          "max": "10B",
          "weight": 10
        }
      }
    },
    "intent_signals": {
      "enabled": false,
      "signals": [],
      "min_score": 0
    }
  },

  "target_roles": {
    "seniority_priority": ["vp", "c_suite", "director", "head", "manager"],
    "functions": ["sales", "marketing", "growth", "operations", "business_development"],
    "custom_titles": ["Founder", "Co-Founder", "Owner", "Partner", "Principal"],
    "exclude_titles": ["Intern", "Student", "Junior"],
    "contacts_by_company_size": {
      "small": { "max_employees": 20, "contacts": 2 },
      "medium": { "max_employees": 100, "contacts": 3 },
      "large": { "min_employees": 100, "contacts": 4 }
    }
  },

  "enrichment": {
    "blitz_api": {
      "enabled": true,
      "find_decision_makers": true,
      "enrich_emails": true,
      "verify_employment": false
    },
    "existing_verification": {
      "use_million_verifier": true,
      "use_bounce_ban": true
    }
  },

  "output": {
    "format": "excel",
    "sheet_name": "Qualified Leads",
    "min_quality_score": 0,
    "include_reasoning": true,
    "smartlead_ready": true
  },

  "deduplication": {
    "company_fuzzy_threshold": 0.85,
    "check_previous_campaigns": false,
    "previous_contact_days": 90
  }
}
